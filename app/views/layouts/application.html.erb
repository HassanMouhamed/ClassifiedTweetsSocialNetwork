<!DOCTYPE html>
<html>
<head>
  <title>Social Network</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="header">

  <ul>
    <li id="home_but"><a href="/"><%= image_tag("home.png", width: 20) %>Home</a></li>
    <li id="profile_but"><a href="/users/<%= current_user_id %>"><%= image_tag("profile.png", width: 20) %>Profile</a>
    </li>
    <li id="notif_but"><a href=""> <%= image_tag("notif.png", width: 20) %>Notifications</a></li>
    <li id="requests_but"><a href="/friendship/show"><%= image_tag("requests.png", width: 20) %> Requests
      <span id="req_count"><%= @requests_cout %></span> </a></li>
    <li id="friends_but"><a href="/friends"><%= image_tag("friends.png", width: 20) %> Friends</a></li>
  </ul>
  <div class="dropdown">
    <button class="dropbtn">Select Category</button>
    <div class="dropdown-content">
      <a href="/1">News</a>
      <a href="/2">Sports</a>
      <a href="/3">Science & Tech.</a>
      <a href="/4">Entertainment</a>
      <a href="/5">Business</a>
      <a href="/6">Just For Fun</a>
      <a href="/7">Others</a>
    </div>
  </div>

  <a href="/"><%= image_tag("logo.png", width: 35, id: 'logo') %></a>
  <ul id="edit_logout">
    <li id="edit_but"><a href="/user/edit"><%= image_tag("edit.png", width: 20) %>Edit</a></li>
    <li id="logout_but"><a href="/logout"><%= image_tag("logout.png", width: 20) %>Log Out</a></li>
  </ul>

</div>
<div id="home_user_info">  <%= render 'user/userinfo' %></div>
<div id="home_body">

  <%= yield %>

</div>
<div id="searching"><%= render 'search/search' %></div>

</body>
</html>
